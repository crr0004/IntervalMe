<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntervalClockSampleActivity">

    <io.github.crr0004.intervalme.views.IntervalClockView
        android:id="@+id/intervalClockView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        custom:background_clock_colour="?attr/colorPrimary"
        custom:clock_text="00:00:00"
        custom:clock_text_size="14sp"/>

    <Button
        android:id="@+id/sampleClockInfoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intervalClockView" />

    <TextView
        android:id="@+id/sampleInfoTxt"
        android:layout_width="281dp"
        android:layout_height="116dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sampleClockInfoBtn"
        app:layout_constraintTop_toBottomOf="@+id/intervalClockView" />
</android.support.constraint.ConstraintLayout>